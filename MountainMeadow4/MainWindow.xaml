<Window x:Class="MountainMeadow4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MountainMeadow4"
        mc:Ignorable="d"
        Title="Mountain Meadow" 
        Height="922" Width="1548"
        FontSize="14">
    <DockPanel LastChildFill="True">
        <StackPanel Name="pnlTabs" DockPanel.Dock="Right" Width="100" Background="Aqua"></StackPanel>
        <Menu Name="mnuTop" DockPanel.Dock="Top" Height="25" Background="AliceBlue"></Menu>
        <Label Name="lblPtInfo" DockPanel.Dock="Top" Height="25" Background="AntiqueWhite" ></Label>
        <StatusBar Name="statBar" DockPanel.Dock="Bottom" Height="20" Background="Aquamarine"></StatusBar>
        <UserControl Name="ucDisplay" Background="Azure">display area</UserControl>
    </DockPanel>
</Window>
